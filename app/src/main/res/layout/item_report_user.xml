<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/report_item_background"
    android:padding="12dp">

    <!-- Report Title -->
    <TextView
        android:id="@+id/reportTitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Report Title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#212121"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Report Status -->
    <TextView
        android:id="@+id/reportStatusText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Status: Pending"
        android:textSize="14sp"
        android:textColor="#FF9800"
        app:layout_constraintTop_toBottomOf="@id/reportTitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Report Date -->
    <TextView
        android:id="@+id/reportDateText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Date: Jan 1, 2024"
        android:textSize="12sp"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/reportStatusText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
